{
  "manifest_version": 3,
  "name": "Scam Watch Nepal",
  "version": "1.0",
  "description": "Prevent users from visiting Facebook / Instagram pages, YouTube channels, and websites that are known to scam people.",
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "activeTab",
    "alarms",
    "storage"
  ],
  "host_permissions": [
    "*://*.facebook.com/*",
    "http://localhost:8888/*",
    "https://*.netlify.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "block-scams",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}